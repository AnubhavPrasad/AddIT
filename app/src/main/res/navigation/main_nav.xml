<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/tabbedFragment">

    <fragment
        android:id="@+id/mainPage"
        android:name="com.example.listmaker.MainPage"
        android:label="fragment_main_page"
        tools:layout="@layout/fragment_main_page" >
        <action
            android:id="@+id/action_mainPage_to_aboutFrag"
            app:destination="@id/aboutFrag" />
    </fragment>
    <fragment
        android:id="@+id/aboutFrag"
        android:name="com.example.listmaker.AboutFrag"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFrag_to_tabbedFragment"
            app:destination="@id/tabbedFragment"
            app:popUpTo="@id/tabbedFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/tabbedFragment"
        android:name="com.example.listmaker.TabbedFragment"
        android:label="TabbedFragment" >
        <action
            android:id="@+id/action_tabbedFragment_to_aboutFrag"
            app:destination="@id/aboutFrag" />
    </fragment>
</navigation>