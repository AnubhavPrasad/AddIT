<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/recycler_tem_back"
    android:orientation="vertical"
    android:padding="7dp">

    <CheckBox
        android:id="@+id/bt_check"
        android:layout_width="24dp"
        android:buttonTint="#448AFF"
        android:layout_height="24dp"
        android:visibility="gone"
        />
    <ImageView
        android:src="@drawable/ic_close_black_24dp"
        android:id="@+id/bt_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bt_back" />

    <ImageView

        android:id="@+id/pie_image"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_pie_chart_24dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@id/bt_delete"
        android:text="Hello"
        android:textColor="#111"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_below="@id/bt_delete"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/bt_delete"
        android:text="TextView"
        android:textColor="#111"
        android:textSize="20sp" />

    <View
        android:layout_toEndOf="@id/bt_delete"
        android:layout_below="@id/text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:background="#A979DA" />
</RelativeLayout>